{
  "suggest.enablePreview": true,
  "suggest.snippetIndicator": "☀︎ ",
  "suggest.timeout": 15000,
  "coc.preferences.jumpCommand": "vsplit",
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "json"
  ],
  "solargraph.completion": true,
  "solargraph.definitions": true,
  "solargraph.references": true,
  "solargraph.diagnostics": false,
  "solargraph.hover": false,
  "explorer.toggle": true,
  "explorer.width": 35,
  "explorer.position": "right",
  "explorer.previewAction.onHover": false,
  "explorer.file.autoReveal": false,
  "explorer.file.root.template": "[fullpath]",
  "explorer.filename.colored.enable": {
    "git": true
  },
  "explorer.autoExpandOptions": [
    "uncompact"
  ],
  "explorer.keyMappings.global": {
    "<cr>": [
      "expandable?",
      [
        "expanded?",
        "collapse",
        "expand"
      ],
      "open"
    ],
    "l": false,
    "O": "expand:recursive"
  },
  "explorer.sources": [
    {
      "name": "file",
      "expand": true
    }
  ],
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    }
  },
  "diagnostic.checkCurrentLine": true,
  "diagnostic.errorSign": "×",
  "diagnostic.hintSign": "ⅰ",
  "diagnostic.infoSign": "ⅰ",
  "diagnostic.warningSign": "⚠",
  "diagnostic-languageserver.debug": true,
  "diagnostic-languageserver.trace.server": "verbose",
  "diagnostic-languageserver.linters": {
    "rubocop": {
      "command": "bundle",
      "sourceName": "rubocop",
      "debounce": 100,
      "args": [
        "exec",
        "rubocop",
        "--format",
        "json",
        "--force-exclusion",
        "--stdin",
        "%text"
      ],
      "parseJson": {
        "errorsRoot": "files[0].offenses",
        "line": "location.line",
        "column": "location.column",
        "message": "[${cop_name}]\n${message}",
        "security": "severity"
      },
      "securities": {
        "fatal": "error",
        "warning": "warning"
      }
    }
  },
  "diagnostic-languageserver.filetypes": {
    "markdown": "markdownlint",
    "ruby": "rubocop",
    "sh": "shellcheck",
    "vim": "vint",
    "yaml": "yamllint"
  }
}
