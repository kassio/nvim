#!/usr/bin/env bash

base="$(dirname $0)/.."
minpac_path="${base}/pack/minpac"

if [ ! -d ${minpac_path} ]
then
  echo 'Downloading minpac'
  git clone https://github.com/k-takata/minpac.git \
    "${minpac_path}/opt/minpac" 2> /dev/null
fi

nvim --noplugin --headless -u "${base}/packs.vim" +"PackUpdate" +"qall!"
