#!/usr/bin/env bash

which for-each-ruby &>/dev/null || { echo >&2 'for-each-ruby not found!' && exit -1; }

echo 'updating lua dependency...'
brew install lua &>/dev/null

echo 'updating python dependencies...'
pip install --force-reinstall neovim &>/dev/null
pip3 install --force-reinstall neovim-remote &>/dev/null

echo 'updating ruby dependencies...'
for-each-ruby gem install neovim &>/dev/null
for-each-ruby gem install rcodetools &>/dev/null

echo 'installing linters...'
echo 'ğŸ”¹ rubocop' & for-each-ruby gem install rubocop &>/dev/null
echo 'ğŸ”¹ scss_lint' & for-each-ruby gem install scss_lint &>/dev/null
echo 'ğŸ”¹ pre-commit' & for-each-ruby gem install pre-commit &>/dev/null
echo 'ğŸ”¹ eslint' &npm install -g eslint
