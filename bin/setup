#!/usr/bin/env bash

command -v for-each-ruby > /dev/null \
  || { echo "for-each-ruby not found!" >&2 && exit 1; }

header() { echo -e "🔹  $*"; }
item() { echo -e "\t☀️  $*"; }

header "language servers"
item "solargraph (ruby)" && \
  gem install solargraph

header "updating vim packs"
bash "$(dirname "${0}")/pack" > /dev/null
