#!/usr/bin/env bash

clear

if [[ -d "$HOME/.nvim/bundle" ]]
then
  nvim -n -e \
    +unsilent\ NeoBundleClean! \
    +silent\ NeoBundleUpdate! \
    +unsilent\ NeoBundleUpdatesLog \
    +qall 2>&1
else
  mkdir -p $HOME/.nvim/bundle

  git clone \
    https://github.com/Shougo/neobundle.vim \
    $HOME/.nvim/bundle/neobundle.vim

  nvim -u $HOME/.nvim/neobundle.vim \
    +NeoBundleInstall! \
    +qall
fi
