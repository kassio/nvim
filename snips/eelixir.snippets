extends html, elixir

snippet "[e=]" "" ir
<%= ${0:${VISUAL}} %>
endsnippet

snippet "(er|-)" "" ir
<% ${0:${VISUAL}} %>
endsnippet

snippet end
<% end %>
endsnippet

snippet lt "" w
<%= link ${0:${VISUAL}} %>
endsnippet

snippet b
<% ${1:if $2} %>
  ${0:${VISUAL}}
<% end %>
endsnippet

snippet ins
<%= ${0:${VISUAL}} |> inspect %>
endsnippet
